{
  "name": "chinese-name-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:alt": "next dev -p 3001",
    "dev:alt2": "next dev -p 3002",
    "dev:alt3": "next dev -p 3003",
    "prebuild": "node deploy.js && rimraf .next && echo 'Preparing build environment...'",
    "build": "NEXT_DISABLE_CACHE=1 next build",
    "build:cf": "NEXT_DISABLE_CACHE=1 node cloudflare-pages-build.js",
    "build:clean": "rimraf .next node_modules/.cache && NEXT_DISABLE_CACHE=1 next build",
    "build:nocache": "rimraf .next node_modules/.cache && cross-env NEXT_DISABLE_CACHE=1 NODE_ENV=production next build",
    "cloudflare-build": "rimraf .next node_modules/.cache && node cloudflare-pages-build.js",
    "cloudflare-deploy": "node deploy-cloudflare.js",
    "cf:build": "NEXT_DISABLE_CACHE=1 node cloudflare-pages-build.js",
    "cf:deploy": "node deploy-cloudflare.js",
    "cf:clean": "rimraf .next node_modules/.cache && echo 'Cleaned build environment'",
    "cf:full-deploy": "rimraf .next && node cloudflare-pages-build.js && node deploy-cloudflare.js",
    "cf:simple": "node cf-deploy.js",
    "deploy": "rimraf .next node_modules/.cache && node cf-deploy.js",
    "deploy:clean": "taskkill /F /IM node.exe || true && rimraf .next node_modules/.cache && node cf-deploy.js",
    "deploy-fix": "rimraf .next node_modules/.cache && cross-env NODE_ENV=production NEXT_DISABLE_CACHE=1 node cf-deploy.js",
    "cf:nopack": "rimraf .next && cross-env NEXT_DISABLE_CACHE=1 NODE_ENV=production node cf-deploy.js",
    "kill-node": "taskkill /F /IM node.exe || true",
    "start": "next start",
    "start:alt": "next start -p 3001",
    "export": "next build && next export",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:name-generator": "playwright test e2e/name-generator.spec.ts",
    "test:e2e:faq": "playwright test e2e/faq.spec.ts",
    "test:e2e:home": "playwright test e2e/home.spec.ts",
    "clean": "rimraf .next node_modules/.cache",
    "clean:all": "rimraf .next node_modules",
    "fix-imports": "node fix-imports.js",
    "clean-build": "node clean-build.js",
    "auto-fix": "node fix-imports.js && node clean-build.js",
    "deploy:auto-fix": "npm run auto-fix && npm run cf:nopack"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vercel/analytics": "^1.5.0",
    "framer-motion": "^10.16.4",
    "next": "13.5.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.5.2",
    "rimraf": "^5.0.10",
    "typescript": "^5.3.3",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@fontsource/liu-jian-mao-cao": "^5.2.5",
    "@fontsource/ma-shan-zheng": "^5.2.5",
    "@playwright/test": "^1.41.2",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "autoprefixer": "10.4.16",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "critters": "^0.0.23",
    "cross-env": "^7.0.3",
    "eslint": "8.50.0",
    "eslint-config-next": "13.5.4",
    "glob": "^11.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "8.4.31",
    "tailwindcss": "3.3.3"
  }
}
